// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": false,
  "show_completions_on_input": true,
  "context_servers": {
    "mcp-server-github": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    }
  },
  "wsl_connections": [
    {
      "distro_name": "archlinux",
      "user": null,
      "projects": [
        {
          "paths": [
            "/home/oornnery/dotfiles"
          ]
        },
        {
          "paths": [
            "/home/oornnery/proj/tests"
          ]
        }
      ]
    }
  ],
  "languages": {
    "Python": {
      "language_servers": ["ruff", "ty", "!basedpyright"],
      "format_on_save": "on",
      "formatter": [
        { "code_action": "source.fixAll.ruff" },
        { "code_action": "source.organizeImports.ruff" },
        { "language_server": { "name": "ruff" } }
      ]
    }
  },

  "lsp": {
    "basedpyright": {
      "settings": {
        "analysis": {
          "diagnosticMode": "workspace",
          "inlayHints.callArgumentNames": false
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 80,
          "lint": { "extendSelect": ["I"] }
        }
      }
    },
    "ty": {
      "settings": {
        "diagnosticMode": "workspace",
        "disableLanguageServices": false,
        "inlayHints": {
          "variableTypes": true,
          "callArgumentNames": true
        },
        "experimental": {
          "autoImport": true,
          "rename": true
        }
      }
    }
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-codex"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "thread_summary_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.5-pro"
    },
    "model_parameters": [{ "provider": "copilot_chat", "temperature": 0.0 }],
    "default_view": "text_thread",
    "use_modifier_to_send": true,
    "single_file_review": true,
    "play_sound_when_agent_done": true,
    "expand_edit_card": false,
    "expand_terminal_card": false
  },
  "confirm_quit": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "vim_mode": false,
  "relative_line_numbers": true,
  "minimap": {
    "show": "auto"
  },
  "file_types": {},
  "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 20.0,
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "Catppuccin Mocha"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "terminal": {
    "blinking": "on",
    "env": {},
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    }
  },
  "edit_predictions": {
    // A list of globs representing files that edit predictions should be disabled for.
    // There's a sensible default list of globs already included.
    // Any addition to this list will be merged with the default list.
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/secrets.yml"
    ]
  },
  "auto_install_extensions": {
    "pylsp": true,
    "python-snippets": true,
    "python-requirements": true,
    "python-refactoring": true,
    // "basedpyright": true,
    "toml": true,
    "sql": true,
    "lua": true,
    "html": true,
    "dockerfile": true,
    "docker-compose": true,
    "git-firefly": true,
    "markdown-oxide": true,
    "mcp-server-sequential-thinking": true,
    "mcp-server-github": true,
    "mcp-server-context7": true,
    "catppuccin": true,
    "graphql": true,
    "prisma": true,
    "biome": true,
    "ini": true
  }
}
