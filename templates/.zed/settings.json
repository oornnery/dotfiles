// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "context_servers": {
    "mcp-server-github": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    }
  },
  "wsl_connections": [
    {
      "distro_name": "archlinux",
      "user": null,
      "projects": []
    }
  ],
  "languages": {
    "Python": {
      "language_servers": ["ty", "ruff", "basedpyright"],
      "format_on_save": "on",
      "formatter": [
        { "code_action": "source.fixAll.ruff" },
        { "code_action": "source.organizeImports.ruff" },
        { "language_server": { "name": "ruff" } }
      ]
    }
  },

  "lsp": {
    "basedpyright": {
      "settings": {
        "analysis": { "typeCheckingMode": "off" }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 80,
          "lint": { "extendSelect": ["I"] }
        }
      }
    },
    "ty": {
      "settings": {
        "diagnosticMode": "workspace",
        "disableLanguageServices": true,
        "inlayHints": {
          "variableTypes": true,
          "callArgumentNames": true
        },
        "experimental": {
          "autoImport": true,
          "rename": true
        }
      }
    }
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-5-mini"
    },
    "commit_message_model": {
      "provider": "openai",
      "model": "gpt-5-mini"
    },
    "thread_summary_model": {
      "provider": "google",
      "model": "gemini-2.5-pro"
    },
    "model_parameters": [
      { "provider": "anthropic", "temperature": 0.0 },
      { "provider": "openai", "temperature": 0.0 },
      { "provider": "google", "temperature": 0.0 }
    ],
    "default_view": "text_thread",
    "use_modifier_to_send": true,
    "single_file_review": true,
    "play_sound_when_agent_done": true,
    "expand_edit_card": false,
    "expand_terminal_card": false
  },
  "confirm_quit": true,
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "auto"
  },
  "file_types": {},
  "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 20.0,
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "Catppuccin Mocha"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "auto_install_extensions": {
    "pylsp": true,
    "python-snippets": true,
    "python-requirements": true,
    "python-refactoring": true,
    "basedpyright": true,
    "ruff": true,
    "ty": true,
    "toml": true,
    "sql": true,
    "lua": true,
    "html": true,
    "dockerfile": true,
    "docker-compose": true,
    "git-firefly": true,
    "markdown-oxide": true,
    "mcp-server-sequential-thinking": true,
    "mcp-server-github": true,
    "mcp-server-context7": true,
    "catppuccin": true,
    "graphql": true,
    "prisma": true,
    "biome": true,
    "ini": true
  }
}
