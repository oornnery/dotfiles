{
  "mcpServers": {
    "filesystem": {
      "command": "uvx",
      "args": ["mcp-server-filesystem", "--root", "~"],
      "env": {}
    },
    "github": {
      "command": "uvx", 
      "args": ["mcp-server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": ""
      }
    },
    "postgres": {
      "command": "uvx",
      "args": ["mcp-server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": ""
      }
    },
    "web-search": {
      "command": "uvx",
      "args": ["mcp-server-brave-search"],
      "env": {
        "BRAVE_API_KEY": ""
      }
    },
    "sqlite": {
      "command": "uvx",
      "args": ["mcp-server-sqlite", "--db-path", "~/dev/databases"],
      "env": {}
    },
    "memory": {
      "command": "uvx", 
      "args": ["mcp-server-memory"],
      "env": {}
    },
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time"],
      "env": {}
    },
    "shell": {
      "command": "uvx",
      "args": ["mcp-server-shell"],
      "env": {}
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git", "--repository", "."],
      "env": {}
    },
    "puppeteer": {
      "command": "uvx",
      "args": ["mcp-server-puppeteer"],
      "env": {}
    },
    "sequential-thinking": {
      "command": "uvx",
      "args": ["mcp-server-sequential-thinking"],
      "env": {}
    },
    "obsidian": {
      "command": "uvx",
      "args": ["mcp-server-obsidian", "--vault-path", "~/Documents/Notes"],
      "env": {}
    },
    "youtube-transcript": {
      "command": "uvx",
      "args": ["mcp-server-youtube-transcript"],
      "env": {}
    },
    "docker": {
      "command": "uvx",
      "args": ["mcp-server-docker"],
      "env": {}
    }
  }
}
