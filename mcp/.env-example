# MCP Environment Variables
# Copy this file to .env and fill in your API keys and configuration

# GitHub Configuration
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here
GITHUB_USERNAME=your_username

# Database Configuration
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/database
MYSQL_CONNECTION_STRING=mysql://user:password@localhost:3306/database
SQLITE_DB_PATH=~/dev/databases

# Search API Keys
BRAVE_API_KEY=your_brave_search_api_key
GOOGLE_API_KEY=your_google_search_api_key
GOOGLE_CSE_ID=your_google_custom_search_engine_id

# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GROQ_API_KEY=your_groq_api_key

# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Development Paths
WORKSPACE_ROOT=~/dev/projects
NOTES_PATH=~/Documents/Notes
OBSIDIAN_VAULT_PATH=~/Documents/Notes

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# MCP Server Configuration
MCP_LOG_LEVEL=info
MCP_TIMEOUT=30

# System Configuration
SHELL_TIMEOUT=30
FILESYSTEM_ROOT=~
GIT_DEFAULT_BRANCH=main

# Integration Settings
SLACK_BOT_TOKEN=your_slack_bot_token
DISCORD_BOT_TOKEN=your_discord_bot_token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Security Settings
MCP_ENABLE_SHELL=false
MCP_ENABLE_FILESYSTEM=true
MCP_ENABLE_NETWORK=true
